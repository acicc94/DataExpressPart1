extends layout

block content
    form(method='post' action='/account/' + user.id)
        label(for="username") Username &nbsp;
            input(type='text', name = 'username', value=user.Username)
        br
        label(for="password") password:&nbsp;
            input(type='password', name='password', value=user.Password)
        br
        label(for="email") email:&nbsp;
            input(type='text', name='email', value=user.email)
        br
        label(for="age") age:&nbsp;
            input(type='text', name='age', value=user.age)
        br
        label(for="Q1") What is your mothers maiden name?
            input(type='text', name='Q1', value=user.Q1)
        br
        label(for="Q2") Name of your first dog?
            input(type='text', name='Q2', value=user.Q2)
        br
        label(for="Q3") In what town or city was your first full time job?
            input(type='text', name='Q3', value=user.Q3)
        br
        input(type='submit' value='submit')   