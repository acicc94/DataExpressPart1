extends layout

block content
    div(class="account")
        var profilePic = "https://api.adorable.io/avatars/face/eyes5/nose7/mouth2/8e8895"
        img(src=profilePic)
        p Name: #{user.Username}
        p Age: #{user.age}
        p Email: #{user.email}
        p Question 1: #{user.Q1}
        p Question 2: #{user.Q2}
        p Question 3: #{user.Q3}

        br

        
        canvas(id="canvasContent", class='canvasColor')

        p
        #menu
            a(href="/editInfo") Edit account info
    
        p
        #logOut
            a(href="/logout") Logout

        
